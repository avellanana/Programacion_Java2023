package tema3_Calc;

public class TestCalculadora {
		
		void pruebaUnitariaSuma() {
			Calculadora mycalculadora = new Calculadora();
			
			int sumando1=1;
			int sumando2=2;
			int primeraSuma = mycalculadora.suma(sumando1, sumando2);
			
			if(primeraSuma !=2) {
				System.out.println("La prueba unitaria esta mal");
			}
			
			int sumando1=2;
			int sumando2=5;
			int primeraSuma = mycalculadora.suma(sumando1, sumando2);
			
			if(primeraSuma !=7) {
				System.out.println("La prueba unitaria esta mal");
			}
			
			int sumando1=3;
			int sumando2=5;
			int primeraSuma = mycalculadora.suma(sumando1, sumando2);
			
			if(primeraSuma !=8) {
				System.out.println("La prueba unitaria esta mal");
			}
			
			int sumando1=4;
			int sumando2=6;
			int primeraSuma = mycalculadora.suma(sumando1, sumando2);
			
			if(primeraSuma !=10) {
				System.out.println("La prueba unitaria esta mal");
			}
			
		}
		public static void main(String[] args) {
			pruebaUnitariaSuma();
	}

}
